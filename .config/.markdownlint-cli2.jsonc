{
  // markdownlint-cli2 configuration for opencode-teams
  // https://github.com/DavidAnson/markdownlint-cli2

  "config": {
    // MD003: Heading style - ATX (#) headings only
    "MD003": { "style": "atx" },

    // MD004: Unordered list style - dashes
    "MD004": { "style": "dash" },

    // MD007: Unordered list indentation - 2 spaces (match Prettier tabWidth)
    "MD007": { "indent": 2 },

    // MD009: Trailing spaces - allow 2 for explicit line breaks
    "MD009": { "br_spaces": 2 },

    // MD013: Line length - 100 chars (match Prettier printWidth)
    // Exclude code blocks and tables where wrapping breaks content
    "MD013": {
      "line_length": 100,
      "code_blocks": false,
      "tables": false,
      "headings": false,
    },

    // MD024: Allow duplicate headings in different sections
    "MD024": { "siblings_only": true },

    // MD026: Trailing punctuation in headings
    "MD026": { "punctuation": ".,;:!" },

    // MD029: Ordered list numbering - sequential (1, 2, 3)
    "MD029": { "style": "ordered" },

    // MD033: Inline HTML - allow common documentation elements
    "MD033": {
      "allowed_elements": ["br", "kbd", "details", "summary", "img", "sub", "sup"],
    },

    // MD035: Horizontal rule style
    "MD035": { "style": "---" },

    // MD041: First line heading - disabled (files may use YAML frontmatter)
    "MD041": false,

    // MD046: Code block style - fenced only
    "MD046": { "style": "fenced" },

    // MD048: Code fence style - backticks
    "MD048": { "style": "backtick" },

    // MD049: Emphasis style - asterisks (match existing codebase)
    "MD049": { "style": "asterisk" },

    // MD050: Strong emphasis style - asterisks
    "MD050": { "style": "asterisk" },
  },

  // Files to lint (explicit list for predictable behavior)
  "globs": [
    "docs/**/*.md",
    "skills/**/*.md",
    "agent/**/*.md",
    "examples/**/*.md",
    "workflows/**/*.md",
    "tasks/**/*.md",
    "README.md",
    "CHANGELOG.md",
    "RELEASE.md",
    "AGENTS.md",
  ],

  // Directories to skip
  "ignores": [
    "node_modules/**",
    "dist/**",
    ".kittify/**",
    ".opencode/**",
    ".ralph-tui/**",
    ".beads/**",
    ".ntm/**",
    ".sisyphus/**",
  ],
}
