{
  "name": "opencode-teams",
  "version": "0.1.0",
  "description": "Multi-agent team coordination plugin for OpenCode",
  "author": {
    "name": "rothnic",
    "email": ""
  },
  "keywords": [
    "opencode",
    "plugin",
    "teams",
    "multi-agent",
    "coordination",
    "collaboration"
  ],
  "type": "module",
  "bin": {
    "opencode-teams": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rothnic/opencode-teams"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "src/version.ts",
    "skills",
    "agent",
    "examples",
    "opencode.json"
  ],
  "scripts": {
    "setup": "bun install",
    "build": "bun x tsc",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "biome check --write .",
    "format:check": "biome check src/ tests/",
    "typecheck": "tsc --noEmit",
    "ls-lint": "ls-lint --config .config/ls-lint.yml",
    "markdownlint": "markdownlint-cli2 --config .config/.markdownlint-cli2.jsonc",
    "markdownlint:fix": "markdownlint-cli2 --config .config/.markdownlint-cli2.jsonc --fix",
    "postinstall": "bun run build && chmod +x dist/cli.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@eslint/js": "^9.39.1",
    "@ls-lint/ls-lint": "^2.3.1",
    "@types/bun": "^1.3.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "8.47.0",
    "@typescript-eslint/parser": "8.47.0",
    "bun-types": "latest",
    "eslint": "^9.39.1",
    "lefthook": "^1.10.0",
    "markdownlint-cli2": "^0.20.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.29",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": "*"
  },
  "peerDependenciesMeta": {
    "@opencode-ai/plugin": {
      "optional": true
    }
  }
}
